package com.techlabs.piggame;
import java.util.Scanner;
import java.util.concurrent.ThreadLocalRandom;

public class DiceGenerator {
	
	static int score=0;
	static int turn=0;
	static boolean flag=false;
	
	static int generateTurn()
	{
		
		/*if(score>=20 || flag==true)
		{
			
		    System.out.println("Turn Over");
		
			System.out.println("Your Score:"+score);
			flag=false;
		}
		if(flag==false)
		{
		   turn++;
		while(score<20 && flag==false)
				score=DiceGenerator.generateDice();
		}*/
		
		
		while(score<20 && flag==false)
		    DiceGenerator.generateDice();
		if(flag==true)
		{
			turn++;
		}	
		
		
		
		
		
			
	}
	
	static void generateDice()
	{
		
		Scanner sc1=new Scanner(System.in);
		System.out.println("Turn:"+turn);
		
		System.out.println("Roll or Hold:r or h?");
		char choice=sc1.next().charAt(0);
		
		if(choice=='r')
		{
			int rand = ThreadLocalRandom.current().nextInt(1,6);
			System.out.println("Die:"+rand);
			if(rand==1)
			{
				score=0;
				 System.out.println("Your Score:"+score);
				 flag=true;
			}
			else
				score=score+rand;
			
		}
		if(choice=='h' || score>=20)
		{
		
			 System.out.println("Your Score:"+score);
			 flag=true;
		}
		
	
		
	}

}
