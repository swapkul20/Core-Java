package com.techlabs.RectangleValidation;

enum color={red,black,gray;}
public class RecangleWithEnum {
	private int width;
	private int height;
	private color col;
	RecangleWithEnum(int w,int h,color c)
	{
		if(w>=1 && w<=100)
			width=w;
		if(w<1)
			width=1;
		if(w>100)
			width=100;
		if(h>=1 && h<=100)
			height=h;
		if(h<1)
			height=1;
		if(h>100)
			height=100;
		col=c;
		
	}
	void setWidth(int w)
	{
		if(w>=1 && w<=100)
			width=w;
		if(w<1)
			width=1;
		if(w>100)
			width=100;
	}
	int getWidth()
	{
		return width;
	}
	void setHeight(int h)
	{
		if(h>=1 && h<=100)
			height=h;
		if(h<1)
			height=1;
		if(h>100)
			height=100;
	}
	int getHeight()
	{
		return height;
	}
	void setColor(Color c)
	{
		color=c;
	}
    String getColor()
	{
		return color;
	}

}
