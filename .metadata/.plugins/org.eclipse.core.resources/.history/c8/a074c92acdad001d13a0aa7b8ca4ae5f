package com.techlabs.cricketbooknew;
import java.util.Scanner;
public class Player {
	String name1;
	String name2;
    int pagenumber;
    int score1;
    int score2;
    int turn1;
    int turn2;
    Scanner sc1;
    int flag1=0;
    int flag2=0;
    int i;
    void acceptPlayer()
    {
    	sc1=new Scanner(System.in);
    	System.out.println("Enter name of player1:");
    	name1=sc1.next();
    	System.out.println("Enter name of player2:");
    	name2=sc1.next();
    	for(i=1;i<=12;i++)
    	{
    		pagenumber=(int) Math.floor(Math.random() *(300 - 1 + 1) + 1);
      		System.out.println(name1+"  reading page number:"+pagenumber);
    		score1=score1+(pagenumber%7);
    		if(pagenumber%7==0)
    		{
    			turn1=i;
    			flag1=1;
    			break;
    		}
    			
    	  }
    	if(flag1==1)
    	    System.out.println("Total Score of "+name1+" is:"+score1+" in turns:"+turn1);
    	else
    		System.out.println("Total Score of "+name1+" is:"+score1+" in turns: "+(i-1));
    	
    	for(i=1;i<=12;i++)
    	{
    		pagenumber=(int) Math.floor(Math.random() *(300 - 1 + 1) + 1);
      		System.out.println(name2+"  reading page number:"+pagenumber);
    		score2=score2+(pagenumber%7);
    		if(pagenumber%7==0)
    		{
    			turn2=i;
    			flag2=1;
    			break;
    		}
    			
    	  }
    	if(flag2==1)
    	    System.out.println("Total Score of "+name2+" is:"+score2+" in turns:"+turn2);
    	else
    		System.out.println("Total Score of "+name2+" is:"+score2+" in turns: "+(i-1));
    
    if(score1<score2)
    	System.out.println(name2+" is winner");
    if(score2<score1)
    	System.out.println(name1+" is winner");
    if(score1==score2)
    {
    	if(turn1<turn2)
    		System.out.println(name1+" is winner on the basis of turns");
    	if(turn2<turn1)
    		System.out.println(name2+" is winner on the basis of turns");
    	if(turn1==turn2)
    		System.out.println("Match tied");
    }
    
    
    }

}
