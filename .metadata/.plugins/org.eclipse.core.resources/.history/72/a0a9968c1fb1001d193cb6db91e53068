package com.techlabs.employeepoly;

public class Developer extends Employee {
	private double fa;
	private double ot;
	

	public Developer(int eno, String name, double basic) {
		super(eno,name,basic);
		calculateDetails();
		ctc=getBasic()+fa+ot;
	
	}
	private void calculateDetails()
	{
		fa=(getBasic()*40)/100;
		ot=(getBasic()*30)/100;
		
	}
	public double getFa()
	{
		return fa;
	}
	public double getOt()
	{
		return ot;
	}
	

}
